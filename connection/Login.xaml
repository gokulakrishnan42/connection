<Window x:Class="connection.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:connection"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
    
    <StackPanel Grid.Column="0" Height="800" Width="700">
        <Image Source="C:\Users\DELL\OneDrive\Pictures\13143.jpg"></Image>
            <!--<Image Source="Assets/13143.jpg" />-->
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="20">
            <StackPanel Margin="75">
            <TextBlock Text="Login" Width="500" FontSize="20" FontWeight="Bold"></TextBlock>

                <TextBlock Text="Email" Margin="10"></TextBlock>
                <TextBox x:Name="txtemail" Margin="8,0,0,0"></TextBox>
                
                <TextBlock Text="Password" Margin="10"></TextBlock>
                <PasswordBox x:Name="txtpassword" Margin="8,0,0,0"/>

                <Button Margin="8,20,0,0" Content="login" x:Name="btnlogin" Click="btnlogin_Click"></Button>

                <TextBlock Text="Dont have an account?" Margin="50,20,0,0"></TextBlock>

                <Button Content="Switch to Register" x:Name="btnreg" Click="btnreg_Click" Margin="8,0,0,0" Background="Transparent" BorderBrush="Transparent"></Button>
                
                
            </StackPanel>
        </StackPanel>
    </Grid>





   
</Window>
