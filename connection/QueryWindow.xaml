<Window x:Class="connection.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:connection"
        mc:Ignorable="d"
        Title="QueryWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Execute SQL Query" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="Enter Your Query Below:" Margin="10"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtquery" AcceptsReturn="True" Width="700" Height="200" BorderThickness="6" BorderBrush="LightBlue"></TextBox>
        <Button x:Name="btnrun" Content="run" Click="btnrun_Click"/>
    </StackPanel>
</Window>
