<Window x:Class="connection.ConnectionScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:connection"
        mc:Ignorable="d"
        Title="ConnectionScreen" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="SQL Connection Settings" FontSize="20" FontWeight="Bold" Margin="10"></TextBlock>
        <TextBlock Text="Server:" FontWeight="SemiBold"/>
        <TextBox x:Name="txtserver" Width="300" Margin="0,5,0,10"/>
        <TextBlock Text="Database:" FontWeight="SemiBold"/>
        <TextBox x:Name="txtDatabase" Width="300" Margin="0,5,0,10"/>
        <CheckBox x:Name="CB" Content="Use windows Authentication" IsChecked="True" Margin="0,5,0,10"/>

        <TextBlock Text="UserName:" FontWeight="SemiBold"/>
        <TextBox x:Name="txtusername" Width="300" Margin="0,5,0,10"/>

        <TextBlock Text="Password:" FontWeight="SemiBold"/>
        <PasswordBox x:Name="txtPassword" Width="300" Margin="0,5,0,10"/>
        <Button Content="Connect" x:Name="btnConnect" Width="100" Click="btnConnect_Click"/>


    </StackPanel>

</Window>
